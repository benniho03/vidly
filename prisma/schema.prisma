generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model gaming {
  id              String    @id @default(cuid())
  videoId         String?
  title           String?
  thumbnail       String?
  description     String?
  channel         String?
  likeCount       Int?
  commentCount    Int?
  viewCount       Int?
  duration        Int?
  publishedAt     DateTime?
  caption         String?
  tags            String[]
  topicCategories String[]
  language        String?
  categoryid      Int?
  createdat       DateTime? @default(now())
  updatedat       DateTime? @updatedAt
}

model videos {
  id              String    @id @default(cuid())
  videoId         String?
  title           String?
  thumbnail       String?
  description     String?
  channel         String?
  likeCount       Int?
  commentCount    Int?
  viewCount       Int?
  duration        Int?
  publishedAt     DateTime?
  caption         String?
  tags            String[]
  topicCategories String[]
  language        String?
  categoryid      Int?
  query           String?
}

model videos_v2 {
  id              String    @id @default(cuid())
  videoId         String?
  title           String?
  thumbnail       String?
  description     String?
  channel         String?
  likeCount       Int?
  commentCount    Int?
  viewCount       Int?
  duration        Int?
  publishedAt     DateTime?
  caption         String?
  tags            String[]
  topicCategories String[]
  language        String?
  categoryid      Int?
  query           String?
}

model searchterms {
  id    String @id @default(cuid())
  query String @unique
}

model pagetoken {
  pagetoken String   @id
  createdat DateTime @default(now())
}

model searchterm_helper {
  videoId String
  query   String

  @@id([videoId, query])
}
